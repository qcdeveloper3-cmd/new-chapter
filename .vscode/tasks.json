      "type": "shell",
      "command": ".\\.venv\\Scripts\\python -m ruff check src tests",
      "problemMatcher": []
    },
    {
      "label": "format-check",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\python -m ruff format --check src tests",
      "problemMatcher": []
    },
    {
      "label": "test-pytest",
      "type": "shell",
      "command": ".\\.venv\\Scripts\\python -m pytest",
      "problemMatcher": []
